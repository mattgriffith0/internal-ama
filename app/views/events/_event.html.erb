<%= link_to event_path(event) do %>
  <div class="flex flex-col mb-3 py-1 px-2 border border-gray-300 rounded-md group hover:shadow-md">
    <div class="flex flex-row mb-3 items-center">
      <div class="text-4xl hover:text-gray-600">
        <%= event.name %>
      </div>
      <div class="mx-auto text-md text-gray-800">
        Scheduled for: <%= event.date.to_formatted_s(:long) %>
      </div>
    </div> 
    <div class="flex flex-row mb-3">
      <%= event.description %>
    </div>
  </div>
<% end %>