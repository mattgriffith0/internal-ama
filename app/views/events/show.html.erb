<div class="mb-3 flex flex-col">
  <div>
    <h1 class="mb-2 text-4xl"><%= @event.name %></h1>
    <h1 class="mb-2 text-2xl">Scheduled for <%= @event.date.to_formatted_s(:long_ordinal) %></h1>
  </div>
  <div>
    <h2 class="text-xl"><%= @event.description %></h2>
  </div>
</div>

<div class="border-2 border-gray-600 py-2 px-6 rounded-md mb-3">
  <div class="border-b border-gray-500 px-10 py-4">
    <% if @event.questions.any? %>
      <h2 class="mb-3 flex flex-col text-2xl font-bold">
          Submitted Questions
      </h2>
      <div>
        <div class="flex flex-col">
          <%= render @event.questions %>
        </div>
      </div>
    <% else %>
      <h2 class="text-2xl mb-3">
        No questions yet - be the first to submit below!
      </h2>
    <% end %>
  </div>

  <div class="py-4 px-10 mb-3">
    <h2 class="mb-3 text-2xl font-bold">Submit a Question:</h2>
    <%= render 'questions/form', question: @event.questions.build %>
  </div>

</div>
