<h1 class="mb-3"><%= @event.name %></h1>

<% if @event.questions.any? %>
  <div class="mb-3 flex flex-col">
    Submitted Questions
    <br>
    <div class="flex flex-col">
      <%= render @event.questions %>
    </div>
  </div>
<% end %>

<h2>Submit a Question:</h2>
<%= render 'questions/form', question: @event.questions.build %>
<br>
<%= link_to "Advanced Question", new_event_question_path(@event), class: 'btn btn-primary' %>