<div class="bg-gray-800 text-white font-bold antialiased p-6">
  <nav class="flex justify-between">
    <div>
        <%= link_to "Thinkific AMA", root_path, class: 'text-xl' %>
    </div>
    <div class="ml-auto">
      <ul class="flex flex-row">
        <% if user_signed_in? %>
          <li class="pr-5"><%= link_to "Sign out", destroy_user_session_path, method: :delete, class: 'text-white border-2 hover:text-gray-600 hover:bg-white rounded-md p-2 hover:cursor-pointer transition ease-in-out duration-400' %></li>
        <% else %>  
          <li class="pr-5"><%= link_to "Sign in", new_user_session_path, class: 'text-white border-2 hover:text-gray-600 hover:bg-white rounded-md p-2 hover:cursor-pointer transition ease-in-out duration-200' %></li>
          <li class="pr-5"><%= link_to "Register", new_user_registration_path, class: 'text-white border-2 bg-blue-500 hover:bg-blue-800 hover:cursor-pointer rounded-md p-2 transition ease-in-out duration-200' %></li>
        <% end %>
      </ul>      
    </div>
  </nav>
</div>